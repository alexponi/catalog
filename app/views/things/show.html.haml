%p#notice= notice

%p
  %b Tags:
  - @thing.tags.each do |tag|
    = tag.name

= link_to 'Add tag', new_tag_path(thing_id: params[:id])

%br
%br
%p
  %b Name:
  = @thing.name
%p
  %b Feature:
  = @thing.feature
%p
  %b Abbreviation:
  = @thing.abbreviation
%p
  %b Description:
  = @thing.description
%p
  %b Text:
  - @thing.texts.each do |text|
    %br
    = text.text

= link_to 'Add text', new_text_path(thing_id: params[:id]) 
%br
%br
%p
  %b Location:
  - @thing.locations.each do |location|
    %br
    = location.name

= link_to 'Add location', new_location_path(thing_id: params[:id])
%br
%br
%p
  %b File:
  - @thing.file_names.each do |file|
    %br
    = file.name

= link_to 'Add file', new_file_name_path(thing_id: params[:id])
%br
%br
%p
  %b Link:
  - @thing.links.each do |link|
    %br
    = link.name

= link_to 'Add link', new_link_path(thing_id: params[:id])

%br
%br

= link_to 'Edit', edit_thing_path(@thing)
\|
= link_to 'Back', things_path
