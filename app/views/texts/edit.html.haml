%h1 Editing text

= simple_form_for @text, url: "/texts/#{@text.id}?thing_id=#{@thing.id}" do |f|
  = f.error_notification

  .form-inputs
    = f.input :text, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full', :height => 400, :width => 900}}

  .form-actions
    = f.button :submit, data: { disable_with: "Please wait..." }, :class => 'btn btn-primary'

%br
= link_to 'Back', @thing
